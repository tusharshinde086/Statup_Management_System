<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/blue_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_slate_gray"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role: Software Engineer"
            android:textSize="16sp"
            android:textColor="@color/deep_orange_500"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department: IT"
            android:textSize="16sp"
            android:textColor="@color/amber"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: example@company.com"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: +91 9876543210"
            android:textSize="16sp"
            android:textColor="@color/button_danger"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Mumbai, India"
            android:textSize="16sp"
            android:textColor="@color/deep_blue"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOB: 10-May-1995"
            android:textSize="16sp"
            android:textColor="@color/medium_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvJoiningDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joined: 01-Jan-2024"
            android:textSize="16sp"
            android:textColor="@color/light_orange"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary: $5000"
            android:textSize="16sp"
            android:textColor="@color/pink"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>