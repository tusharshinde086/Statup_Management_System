<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:padding="24dp">

        <TextView
            android:id="@+id/mainMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/menu_title_background"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Main Menu"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/manageEmployeesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainMenuTitle"
            android:layout_marginTop="48dp"
            android:background="@drawable/menu_button_background"
            android:text="Manage Employees"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingVertical="16dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/manageProjectsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manageEmployeesButton"
            android:layout_marginTop="24dp"
            android:background="@drawable/menu_button_background"
            android:text="Manage Projects"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingVertical="16dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/manageTasksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manageProjectsButton"
            android:layout_marginTop="24dp"
            android:background="@drawable/menu_button_background"
            android:text="Manage Tasks"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingVertical="16dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/viewReportsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/manageTasksButton"
            android:layout_marginTop="24dp"
            android:background="@drawable/menu_button_background"
            android:text="View Reports"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:paddingVertical="16dp"
            android:elevation="4dp"
            android:stateListAnimator="@null"/>
    </RelativeLayout>
</ScrollView>
