<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Task Name -->
    <TextView
        android:id="@+id/task_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:contentDescription="Task Name"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="6dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Assigned Employees -->
    <TextView
        android:id="@+id/task_assign"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:contentDescription="Assigned Employees"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="6dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Task Priority -->
    <Spinner
        android:id="@+id/task_priority_spinner"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:contentDescription="Task Priority"
        android:paddingLeft="80dp"
        android:padding="4dp" />

    <!-- Task Status -->

    <!-- Date Range -->

    <Spinner
        android:id="@+id/task_status_spinner"
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        android:background="@android:drawable/btn_dropdown"
        android:contentDescription="Task Status"
        android:padding="8dp" />

    <TextView
        android:id="@+id/task_date_range"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:contentDescription="Task Date Range"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Task Progress -->
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="1">

        <SeekBar
            android:id="@+id/task_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:contentDescription="Task Progress"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/blue_700"
            android:thumbTint="@color/black" />

        <TextView
            android:id="@+id/task_progress_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="Progress Percentage"
            android:gravity="center"
            android:text="0%"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</TableRow>
